extends ../layout/common
block content
    .row
        .col
            ol.breadcrumb
                li.breadcrumb-item(aria-current='page',style='display:flex; align-items:center') Trang chủ
                li.breadcrumb-item.active(aria-current='page',style='display:flex; align-items:center') Đăng nhập
    .row.justify-content-center
        .col-8
            if errors 
                each error in errors 
                    .alert.alert-danger #{error}
            h3 Đăng nhập
            form(method="post")
                .form-group
                    label(for='username', action='') Username
                    input#username.form-control.form-control-sm(type='text',name='username',value=values ? values.username : '')
                .form-group
                    label(for='password') Password
                    input#password.form-control.form-control-sm(type='password',name='password',value=values ? values.password : '')
                button.btn.btn-primary(type='submit') Đăng nhập
