extends ../layout/common
block content
    .row
        .col
            ol.breadcrumb
                li.breadcrumb-item(aria-current='page',style='display:flex; align-items:center') Trang chủ
                li.breadcrumb-item.active(aria-current='page',style='display:flex; align-items:center') Đăng kí
    .row.justify-content-center
        .col-8
            if errors 
                each error in errors 
                    .alert.alert-danger #{error}
            h3 Đăng kí
            form(method="post", action='')
                .form-group
                    label(for='name') Full Name
                    input#name.form-control.form-control-sm(type='text',name='name', value=values ? values.name : '')
                .form-group
                    label(for='username') Username
                    input#username.form-control.form-control-sm(type='text',name='username', value=values ? values.username : '')
                .form-group
                    label(for='password') Password
                    input#password.form-control.form-control-sm(type='password',name='password', value=values ? values.password : '')
                .form-group
                    label(for='passWord2') Confirm Password
                    input#passWord2.form-control.form-control-sm(type='password',name='passwordcheck', value=values ? values.passwordcheck : '')
                button.btn.btn-primary(type='submit') Đăng kí       
            