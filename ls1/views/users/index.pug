extends ../layout/common

block content
    h1
        span.mr-3(class='mr-3') Danh sách user
        a.btn.btn-primary(href="/users/create") Create
    .d-flex
        form.d-flex.ml-auto(action='/users/search', method='GET')
            input.form-control.mr-2(type='text',name='q',value=keyword)
            button.btn.btn-primary Search
    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Detail
            each user in users
                tr
                    td 
                        img(src=user.avatar, width='32', alt='logo')
                    td= user.name 
                    td= user.phone 
                    td
                        a.btn.btn-light(href="/users/" + user.id) Xem chi tiết