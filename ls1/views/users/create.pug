extends ../layout/common
block content
    h1 Create new empeloyer

    if errors 
        each error in errors 
            .alert.alert-danger #{error}

    form(action='/users/create', method='POST')
        .form-group
            label(for="name") Name
            input.form-control(type="text" name='name' id='name', value=values ? values.name : '')
            label(for="Phone") Phone
            input.form-control(type="text" name='phone' id='phone',  value=values ? values.phone : '')
            button.mt-3.btn.btn-primary Create