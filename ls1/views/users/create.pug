extends ../layout/common
block content
    h1 Create new empeloyer

    if errors 
        each error in errors 
            .alert.alert-danger #{error}

    form(action='/users/create', method='POST', enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input.form-control(type="text" name='name' id='name', value=values ? values.name : '')
        
            label(for="phone") Phone
            input.form-control(type="text" name='phone' id='phone',  value=values ? values.phone : '')
            
            label(for="gmail") Gmail
            input.form-control(type="text" name='gmail' id='gmail')


        
            label(for="avatar") Avatar
            input.form-control-file(type="file" name='avatar' id='avatar')
            button.mt-3.btn.btn-primary Create