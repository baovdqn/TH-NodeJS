extends ../layout/common
block content
    h1 Login

    if errors 
        each error in errors 
            .alert.alert-danger #{error}

    form(method='POST')
        .form-group
            label(for="gmail") Gmail:
            input.form-control(type="text" name='gmail' id='gmail', value=values ? values.gmail : '')
            label(for="password") Password:
            input.form-control(type="password" name='password' id='password',  value=values ? values.password : '')
            button.mt-3.btn.btn-primary Login