extends ../layout/common

block content
    h1
        span.mr-3(class='mr-3') Product
    .d-flex
        form.d-flex.ml-auto(method='GET')
            input.form-control.mr-2(type='text',name='q',value=keyword)
            button.btn.btn-primary Search
    .row
        each product in products
            .col-3
                .card(style='width: 18rem;')
                img.card-img-top(src= product.img, alt='Card image cap')
                .card-body
                    h5.card-title= product.name
                    p.card-text= product.description
                    a.btn.btn-primary(href='#') Go somewhere
    nav.d-flex(aria-label='Page navigation example')
        ul.pagination.ml-auto.mt-3
            if page > 1
                li.page-item
                    a.page-link(href='/product?page=' + parseInt(page -1)) Previous
            else if page = 1
                li.page-item.disabled
                    a.page-link(href='#') Previous
            li.page-item.disabled
                a.page-link(href='/product?page=' + (page))=page
            li.page-item
                a.page-link(href='/product?page=' + (page + 1))= page + 1
            li.page-item
                a.page-link(href='/product?page=' + (page + 2))= page + 2
            li.page-item
                a.page-link(href='/product?page=' + (page + 1)) Next
            